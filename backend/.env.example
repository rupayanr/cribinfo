# CribInfo Backend Environment Variables

# Database (Supabase PostgreSQL connection string)
DATABASE_URL=postgresql+asyncpg://postgres:[password]@[host]:5432/postgres

# Environment
ENVIRONMENT=development  # or "production"

# LLM Provider: "ollama" (local) or "groq" (production)
LLM_PROVIDER=ollama

# Embedding Provider: "ollama" (local) or "none" (SQL-only search for free tier)
EMBEDDING_PROVIDER=ollama

# Ollama Settings (for local development)
OLLAMA_HOST=http://localhost:11434
OLLAMA_EMBED_MODEL=nomic-embed-text
OLLAMA_LLM_MODEL=llama3.2

# Groq Settings (for production - get free API key at https://console.groq.com)
GROQ_API_KEY=gsk_your_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

# CORS (allowed frontend origins, JSON array)
CORS_ORIGINS=["http://localhost:5173"]

# Default city
DEFAULT_CITY=bangalore
